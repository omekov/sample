{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "outDir": "./dist",
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": "src",
        "paths": {
            "@components": [
                "components"
            ],
            "@pages": [
                "pages"
            ]
        }
    },
    "include": [
        "src"
    ]
}